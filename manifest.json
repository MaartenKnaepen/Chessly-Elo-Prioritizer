{
  "manifest_version": 3,
  "name": "Chessly Course Scanner",
  "version": "3.0",
  "description": "Scan and analyze Chessly course studies with Lichess statistics.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.chessly.com/*",
    "https://explorer.lichess.ovh/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chessly ELO Settings",
    "default_icon": {

      "128": "cep.jpg"
    }
  },
  "background": {
    "service_worker": "TBD"
  },
  "content_scripts": [
    {
      "matches": ["https://*.chessly.com/*"],
      "js": ["TBD"]
    }
  ]
}