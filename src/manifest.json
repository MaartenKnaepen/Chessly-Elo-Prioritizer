{
  "manifest_version": 3,
  "name": "Chessly ELO Prioritizer",
  "version": "1.0.0",
  "description": "Fast extraction of chess repertoires from Chessly with Lichess statistics",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://chessly.com/*",
    "https://cag.chessly.com/*",
    "https://explorer.lichess.ovh/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Chessly ELO Prioritizer"
  },
  "content_scripts": [
    {
      "matches": ["https://chessly.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "cep.jpg",
    "48": "cep.jpg",
    "128": "cep.jpg"
  }
}
